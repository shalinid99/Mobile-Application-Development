<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NameActivity"
    android:orientation="vertical"
    android:background="@drawable/gradiunsc">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coffees"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/button_choose"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="chose file"
                android:visibility="gone"/>


            <EditText
                android:id="@+id/edit_txt_file_name"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="enter file name"
                android:visibility="gone"/>

            <Button
                android:id="@+id/button_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="upload"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/show_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="uplad show"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <ProgressBar
                android:id="@+id/ProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>


            <ImageView
                android:id="@+id/imageView01"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="15dp">


                        <ImageView
                            android:id="@+id/itam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/baileys" />


                    </androidx.cardview.widget.CardView>

                    <TextView

                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Baileys Irish Cream"
                        android:textColor="#000" />

                </LinearLayout>


                <Space
                    android:layout_width="40dp"
                    android:layout_height="70dp"></Space>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="155dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="8dp"
                        app:cardCornerRadius="15dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/espressoo" />


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Short Macchiato"
                        android:textColor="#000" />

                </LinearLayout>

            </LinearLayout>


            <include layout="@layout/coffees1" />

            <include layout="@layout/coffees2" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>